Table outlet {
id int [pk]
name varchar
address varchar
created_at datetime
updated_at datetime
}

Table devices {
id int [pk]
ip varchar
name varchar
created_at datetime
updated_at datetime
outlet_id int [ref: > outlet.id]
}

Table packages {
id int [pk]
name varchar
duration int
price decimal
is_loss boolean
created_at datetime
updated_at datetime
outlet_id int [ref: > outlet.id]
}

Table products {
id int [pk]
name varchar
sku varchar
price decimal
stock int
category_id int [ref: > categories.id]
created_at datetime
updated_at datetime
outlet_id int [ref: > outlet.id]
}

Table members {
id int [pk]
name varchar
phone varchar
points int
created_at datetime
outlet_id int [ref: > outlet.id]
}

Table carts {
id int [pk]
name varchar
created_at datetime
updated_at datetime
outlet_id int [ref: > outlet.id]
}

Table transactions {
id int [pk]
transaction_code varchar
cart_name varchar
member_id int [ref: > members.id]
buyer_name varchar
is_member boolean
total decimal
type varchar
created_at datetime
cashier varchar
outlet_id int [ref: > outlet.id]
}

Table users {
id int [pk]
name varchar
username varchar
password varchar
role_id int [ref: > roles.id]
outlet_id int [ref: > outlet.id]
}

Table roles {
id int [pk]
name varchar
is_admin boolean
modules json
outlet_id int [ref: > outlet.id] // ✅ scope ke outlet
}

Table categories_product {
id int [pk]
name varchar
outlet_id int [ref: > outlet.id] // ✅ scope ke outlet
}

Table cart_items {
id int [pk]
cart_id int [ref: > carts.id]
item_type varchar
product_id int [ref: > products.id]
billing_id int [ref: > billings.id]
duration int
price decimal
total_price decimal
qty int
created_at datetime
updated_at datetime
is_paid boolean
}

Table billings {
id int [pk]
device_id int [ref: > devices.id]
start_time datetime
end_time datetime
package_id int [ref: > packages.id]
is_active boolean
created_at datetime
is_loss boolean
}

Table transaction_details {
id int [pk]
transaction_id int [ref: > transactions.id]
item_type varchar
device_name varchar
start_time datetime
end_time datetime
duration int
package_name varchar
product_id int [ref: > products.id]
category_name varchar
sku varchar
price decimal
qty int
subtotal decimal
created_at datetime
}
